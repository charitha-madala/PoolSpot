<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".NewCard">

    <EditText
        android:id="@+id/edit_text_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_text_Members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description/Members"
        android:inputType="textMultiLine" />
    <EditText
        android:id="@+id/edit_text_Destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Destination"
        android:inputType="text" />
    <EditText
        android:id="@+id/edit_text_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Time of travel"
        android:inputType="text" />
    <EditText
        android:id="@+id/edit_text_PhoneNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact No"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Seats Available:"
        android:textAppearance="@android:style/TextAppearance.Medium" />
    <NumberPicker
        android:id="@+id/number_picker_seats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>