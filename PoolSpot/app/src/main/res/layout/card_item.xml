<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="#FFFFFF"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card"
        android:padding="15dp">

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#7C8F8383"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/text_view_seats"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Name"
            android:textSize="25sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/text_view_seats"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="#7C8F8383"
            android:text="1"
            android:textSize="20sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/text_view_members"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#A1FFFFFF"
            android:layout_below="@id/text_view_name"
            android:layout_alignParentStart="true"
            android:text="Description"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/text_view_Destination"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#A1FFFFFF"
            android:layout_below="@id/text_view_members"
            android:layout_alignParentStart="true"
            android:text="Destination"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#A1FFFFFF"
            android:layout_below="@id/text_view_Destination"
            android:layout_alignParentStart="true"
            android:text="Start Time"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/text_view_PhoneNo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#A1FFFFFF"
            android:layout_below="@id/text_view_time"
            android:layout_alignParentStart="true"
            android:text="Contact No"
            android:textSize="20sp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>